<%= form_with url: url, model: [:user, pix_account] do |f| %>
  <p><%= f.label :pix_code %></p>
  <p><%= f.text_field :pix_code %></p>
  <% pix_account.errors.full_messages_for(:pix_code).each do |message| %> 
    <p><%=  message %></p> 
  <% end %> 
  <p><%= f.label :payment_method_id %></p>
  <p><%= f.collection_select :payment_method_id, @payment_pix, :id, :name, include_blank: true%></p>
    <% pix_account.errors.full_messages_for(:payment_method_id).each do |message| %>
    <p><%=  message %></p> 
  <% end %> 
  <p><%= f.submit %></p>
<% end %>